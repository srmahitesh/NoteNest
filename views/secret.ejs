<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>NOTES</h1>
  <form action="/addnote" method="post">
    <textarea name="note" id="note" placeholder="Write Your Note Here!" required></textarea>
    <input type="submit" value="Add Note">
  </form>

  <%if(locals.data){ 
    for(let i = 0; i < data.length; i++){ %>
      <div><h5><%= data[i].id %></h5>
        <p><%= data[i].note %></p>
      </div>
    <%}
  } %>

</body>
</html>